{
  "name": "nas_backen_js",
  "version": "1.0.0",
  "description": "",
  "private": true,
  "main": "app.js",
  "bin": "./server.js", 
  "files": [
    "app",
    "config",
    "run",
    "package.json",
    "README.md"
  ],
  "egg": {
    "declarations": true
  },
  "dependencies": {
    "egg": "^3.17.4",
    "egg-mysql": "^4.0.0",
    "egg-scripts": "^2.0.0",
    "pkg": "^5.8.1"
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "egg-bin": "^5.14.1",
    "egg-ci": "^2.0.0",
    "egg-mock": "^5.0.0",
    "eslint-config-egg": "^12.0.0",
    "eslint": "^8.0.0",
    "mocha": "^11.7.4",
    "rimraf": "^5.0.0"
  },
  "engines": {
    "node": ">=16.0.0 <21.0.0"
  },
  "scripts": {
    "start": "egg-scripts start --daemon --title=egg-server-nas_backen_js",
    "stop": "egg-scripts stop --title=egg-server-nas_backen_js",
    "dev": "cross-env NODE_OPTIONS=\"--no-experimental-fetch\" egg-bin dev",
    "debug": "egg-bin debug",
    "test": "npm run lint -- --fix && npm run test-local",
    "test-local": "egg-bin test",
    "cov": "egg-bin cov",
    "pkg:linux": "pkg . --targets node18-linux-x64 --output dist/linux/app",
    "pkg:pi": "pkg . --targets node18-linux-aarch64 --output dist/linux/app",
    "ci": "npm run lint && npm run cov",
    "build": "egg-bin build",
    "build:prod": "npm run lint && npm run clean",
    "clean": "rimraf dist",
    "deploy": "npm run build:prod && npm run start",
    "package": "npm run build:prod && npm pack"
  },
  "pkg": {
    "scripts": [
      "app/**/*.js",
      "config/**/*.js"
    ],
    "assets": [
      "app/public/**/*",
      "app/view/**/*"
    ],
    "output": "dist"
  },
  "ci": {
    "version": "16, 18",
    "type": "github"
  },
  "repository": {
    "type": "git",
    "url": ""
  },
  "author": "mhb",
  "license": "MIT"
}
